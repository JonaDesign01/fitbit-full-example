<svg viewport-fill="#000000">
  <textarea fill="#62ff00" x="18" y="10" width="300" height="110" font-size="30" font-family="System-Regular" text-anchor="middle" text-buffer="Choose your location" />
  <text id="location" fill="white" x="50%" y="100" width="300" font-size="36" font-family="System-Regular" text-anchor="middle" text-length="20" text-buffer="loading" />
  <use href="#button" fill="#00FFFF" x="10%" y="100%-90" width="80%">
    <set href="text" attributeName="text-buffer" to="Back" />
    <set href="handle" attributeName="id" to="back-button" />
  </use>
</svg>
